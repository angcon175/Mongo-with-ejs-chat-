<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Write new chat</title>
  </head>
  <body>
    <h3>Write a new chat..</h3>
    <form method="POST" action="/chats">
      <input placeholder="who are you?" type="text" name="from" /> <br />
      <br />
      <textarea
        placeholder="Write your message here.."
        name="msg"
        id=""
      ></textarea>
      <br />
      <br />
      <input placeholder="add receiver" name="to" type="text" /> <br />
      <br />
      <button>Create chat</button>
    </form>
  </body>
</html>
